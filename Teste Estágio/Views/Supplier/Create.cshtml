@model SuppliersModel
@{
    ViewData["Title"] = "Create Supplier";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Supplier Creation!</h1>
    <p>A Vega Project!</p>
</div>

<br />

<form asp-controller="Supplier" asp-action="Create" method="post">


    <div class="mb-3 form-group">
        <label for="name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Type the Supplier's Name" required>
    </div>    

    <div class="mb-3 form-group">
        <label for="description" class="form-label">Description</label>
        <input type="text" asp-for="Description" class="form-control" placeholder="Type the Material's Description" required>
    </div>   

    <div class="mb-3 form-group">
        <label for="CNPJ" class="form-label">CNPJ</label>
        <input type="text" asp-for="CNPJ" class="form-control" placeholder="Type the Supplier's CNPJ'" required>
    </div>

    <div class="mb-3 form-group">
        <label for="CEP" class="form-label">CEP</label>
        <input type="text" asp-for="CEP" class="form-control" placeholder="Type the Supplier's CEP'" required>
    </div>

    <div class="mb-3 form-group">
        <label for="address" class="form-label">Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Type the Supplier's Address" required>
    </div>
    

    <div class="mb-3 form-group">
        <label for="RegistrationDay" class="form-label">Registration Day</label>
        <input type="text" asp-for="RegistrationDay" class="form-control" placeholder="Type the Supplier's Registration Day" required>
    </div>

    
    
    <button type="submit" class="btn btn-success">Add</button>
    <a role="button" class="btn btn-secondary" asp-asp-controller="Supplier" asp-action="Index">Back</a>
</form>


