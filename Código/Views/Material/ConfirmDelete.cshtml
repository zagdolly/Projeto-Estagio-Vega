@model MaterialsModel
@{
    ViewData["Title"] = "ConfirmDelete";
}

<div class="text-center">
    <h1 class="display-4">Are you sure you want to remove @Model.Name ?</h1>
    <a role="button" class="btn btn-check" asp-controller="Material" asp-action="Index">Back</a>
    <a role="button" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Material" asp-action="Delete">Delete</a>
</div>
